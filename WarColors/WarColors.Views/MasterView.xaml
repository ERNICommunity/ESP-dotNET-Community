             x:Class="WarColors.Views.MasterView"
             xmlns:pages="clr-namespace:WarColors.Views">

    <MasterDetailPage.Master>
        <pages:ColumnMasterView x:Name="MasterPage" />
    </MasterDetailPage.Master>

    <MasterDetailPage.Detail>
        <NavigationPage>
            <x:Arguments>
                <pages:MainView />
            </x:Arguments>
        </NavigationPage>
    </MasterDetailPage.Detail>
</MasterDetailPage>