<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:fv="clr-namespace:DLToolkit.Forms.Controls;assembly=DLToolkit.Forms.Controls.FlowListView"
             xmlns:cv="clr-namespace:WarColors.Views.Controls"             
             x:Class="WarColors.Views.ProjectListView">
    <ContentPage.Padding>
        <OnPlatform x:TypeArguments="Thickness" iOS="0, 20, 0, 0" />
    </ContentPage.Padding>

    <StackLayout>

        <fv:FlowListView x:Name="flowListView" FlowColumnCount="3" SeparatorColor="Transparent" SeparatorVisibility="Default" RowHeight="100"
                         FlowUseAbsoluteLayoutInternally="False" FlowColumnExpand="None"
                         IsGroupingEnabled="True" FlowGroupDisplayBinding="{Binding Title}" FlowGroupShortNameBinding="{Binding Title}" 
                         FlowItemsSource="{Binding Projects}">

            <fv:FlowListView.FlowColumnTemplate>
                <DataTemplate>
                    <cv:CardView Margin="5">
                        <Label Text="{Binding Title}" />
                    </cv:CardView>
                </DataTemplate>
            </fv:FlowListView.FlowColumnTemplate>

        </fv:FlowListView>
    </StackLayout>
    
</ContentPage>